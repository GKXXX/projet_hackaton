datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Playlist {
  PlaylistID   Int       @id @default(autoincrement())
  Nom          String
  Description  String?
  Repository String
  SlotID Int @map("slot_id")
  Slot Slot @relation(fields: [SlotID],references: [SlotID],onDelete: NoAction)
}

model Slot {
  SlotID   Int       @id @default(autoincrement())
  StartTime  DateTime
  EndTime    DateTime
  WeekDay String
  Playlists Playlist[]
}

